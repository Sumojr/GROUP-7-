from flask import Flask, render_template, Response, request, jsonify
import cv2
from flask_socketio import SocketIO

app = Flask(__name__)
socketio = SocketIO(app, cors_allowed_origins="*")

# Initialize UV light state
uv_light_on = False

# Capture video from three cameras
cams = [cv2.VideoCapture(i) for i in range(3)]

def generate_frames(cam):
    while True:
        success, frame = cam.read()
        if not success:
            break
        else:
            _, buffer = cv2.imencode('.jpg', frame)
            yield (b'--frame\r\n' b'Content-Type: image/jpeg\r\n\r\n' + buffer.tobytes() + b'\r\n')

@app.route('/stream/<int:cam_id>')
def stream(cam_id):
    return Response(generate_frames(cams[cam_id]), mimetype='multipart/x-mixed-replace; boundary=frame')

@socketio.on('move')
def handle_move(data):
    print(f"Drone moving: Angle={data['angle']}, Force={data['force']}")

@app.route('/toggle_uv', methods=['POST'])
def toggle_uv():
    global uv_light_on
    uv_light_on = not uv_light_on
    return jsonify({'uv_light_state': uv_light_on})

@app.route('/')
def index():
    return render_template('index.html')

if __name__ == '__main__':
    socketio.run(app, debug=True, host='0.0.0.0')
